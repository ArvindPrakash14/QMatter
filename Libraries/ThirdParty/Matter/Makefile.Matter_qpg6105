# OUTDIR := $(BASEDIR)/../../../Work/Matter_qpg6105/out
OUTDIR := $(BASEDIR)/../../../Work/Matter_qpg6105/out

LIBMATTER_QPG6105_A := $(BASEDIR)/../../../Work/Matter_qpg6105/libMatter_qpg6105.a

APPLIB_TARGET_DIR := $(BASEDIR)/../../../Work/Matter_qpg6105
TARGET_LIBS := lib/libMatterStack.a obj/src/app/server/lib/libCHIPAppServer.a
APPLIB_TARGETS := $(addprefix $(OUTDIR)/, $(TARGET_LIBS))

CHIP_ROOT := $(BASEDIR)/../../../Components/ThirdParty/Matter/repo

QPG_SDK_ROOT ?= $(ROOTDIR)
QPG_SDK_LIB_DIR ?= Work
QPG_TARGET_IC ?= qpg6105
QPG_SDK_INCLUDE_PLATFORM_LIBS ?=  false


GN_ROOT_TARGET ?= $(BASEDIR)/../../../Components/ThirdParty/Matter/repo/config/qpg/chip-gn


.PHONY:all
all: $(LIBMATTER_QPG6105_A)


.PRECIOUS: $(LIBMATTER_QPG6105_A)
.PHONY: $(LIBMATTER_QPG6105_A)
$(LIBMATTER_QPG6105_A):
	mkdir -p $(OUTDIR) && \
	mkdir -p $(APPLIB_TARGET_DIR) && \
	gn \
	--root=$(CHIP_ROOT) \
	--root-target=//config/qpg/chip-gn \
	--dotfile=$(GN_ROOT_TARGET)/.gn \
	--script-executable=python3 \
	--export-compile-commands \
	gen \
	--check \
    --args=" qpg_target_ic=\"$(QPG_TARGET_IC)\" qpg_sdk_root=\"$(QPG_SDK_ROOT)\" qpg_sdk_lib_dir=\"$(QPG_SDK_LIB_DIR)\" qpg_sdk_include_platform_libs=$(QPG_SDK_INCLUDE_PLATFORM_LIBS)" \
	--fail-on-unused-args \
	$(OUTDIR) && \
	ninja -C $(OUTDIR) | cat - && \
	cp -u $(OUTDIR)/lib/libMatterStack.a $(LIBMATTER_QPG6105_A)

export_prerequisites: $(LIBMATTER_QPG6105_A)

applib: $(LIBMATTER_QPG6105_A)


.PHONY:clean
clean:
	-rm -r $(OUTDIR) $(LIBMATTER_QPG6105_A)
